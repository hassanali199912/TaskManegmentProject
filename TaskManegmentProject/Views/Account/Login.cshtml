@model TaskManegmentProject.DBcontcion.ViewModels.LoginUser;

@{
    Layout = "_Layout";
}


<div class="auth-page-container">
    <div class="mode-toggle">
        <button class="mode-btn" id="theme-toggle-btn">
            <img src="~/img/icons/moon.svg" id="mode-icon" alt="Mode Svg" />
        </button>
    </div>
    
    <div class="shapes">
        <div class="shap1"></div>
        <div class="shap2"></div>
        <div class="shap3"></div>
        <div class="shap4"></div>
        <div class="shap5"></div>
    </div>
    <div class="@(Model !=null ? "auth-page-content card-container animate": "auth-page-content card-container")" >
        <div class="auth-page-card card all-auth">
            <img src="~/img/svg-2.svg" alt="logo" class="logo" />
            <h4>Log in to My Project</h4>
            <p>
                Lorem ipsum, dolor sit amet consectetur adipisicing elit. Aut fugiat quasi error cum amet
                totam.
            </p>
            <div class="auth-btns">
                <div class="btn-auth">
                    <h4>Continue With Google</h4>
                    <img src="~/img/icons/google.svg" />
                </div>
                <div class="btn-auth">
                    <h4>Continue With Facebook</h4>
                    <img src="~/img/icons/facebook.svg" />
                </div>
                <div class="btn-auth" onclick="flipForm()">
                    <h4>Continue With Email</h4>
                    <img src="~/img/icons/email.svg" />
                </div>
            </div>
            <p>
                Didn't Have Accout ?
                <a asp-controller="Account" asp-action="Regiester" class="btn go-to-link">Sign Up</a>
            </p>
        </div>
        <div class="auth-page-card card email-auth">
            <button class="close-btn btn" onclick="flipForm()">
                <img src="~/img/icons/close-btn.svg" alt="Close svg">
            </button>
            <img src="~/img/svg-2.svg" alt="logo" class="logo" />
            <h4>Log In With Email</h4>
            <p>
                Lorem ipsum, dolor sit amet consectetur adipisicing elit. Aut fugiat quasi error cum amet
                totam.
            </p>
            <form class="email-auth-form" asp-action="Login">
                <div class="text-danger" asp-validation-summary="All"> </div>
                <div class="form-group mt-4">
                    <label asp-for="Email"  class="form-control-label">Email</label>
                    <input asp-for="Email"  class="form-control" id="email"
                           placeholder="Enter your email" value="ali2@app.com" />
                    <span asp-validation-for="Email" class="text-danger mt-3"></span>


                </div>
                <div class="form-group mt-4">
                    <label asp-for="Password" class="form-control-label">Password</label>
                    <input asp-for="Password" class="form-control"  id="password"
                           placeholder="Enter your password" value="Hh@123456789" />
                    <span asp-validation-for="Password" class="text-danger mt-3"></span>
                </div>
                <div class="form-group mt-4">
                    <input type="submit" value="Log In" class="btn submit-btn">
                </div>
            </form>
        </div>
    </div>

</div>

<partial name="_FlipModeJs"></partial>
<partial name="_ValidationScriptsPartial"></partial>